<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="client" extends="basic">
		<action name="index" class="com.iidooo.cms.client.action.IndexAction">
			<result name="success">/templates/inaba/index/Index.jsp</result>
		</action>
		<action name="productList" class="com.iidooo.cms.client.action.product.ProductListAction" method="init">
			<result name="success">/templates/inaba/product/ProductList.jsp</result>
		</action>
		<action name="blogList" class="com.iidooo.cms.client.action.blog.BlogListAction" method="init">
			<result name="success">/templates/inaba/blog/BlogList.jsp</result>
		</action>
		<action name="aboutUs" class="com.iidooo.cms.client.action.about.AboutAction" method="init">
			<result name="success">/templates/inaba/about/About.jsp</result>
		</action>
		<action name="album" class="com.iidooo.cms.client.action.AttachAlbumAction">
			<result name="success" type="freemarker">${currentAlbum.templatePath}</result>
			<result name="none" type="freemarker">TO DO</result>
		</action>
		<action name="attach" class="com.iidooo.cms.client.action.AttachAction">
			<result name="success" type="freemarker">${currentAttach.templatePath}</result>
			<result name="none" type="freemarker">TO DO</result>
		</action>
	</package>
</struts>