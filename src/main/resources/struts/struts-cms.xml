<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="cms" extends="basic">		
		<action name="index" class="com.iidooo.cms.action.IndexAction" method="init">
			<result name="success">/WEB-INF/jsp/Index.jsp</result>
		</action>

		<action name="channelList" class="com.iidooo.cms.action.channel.ChannelListAction" method="init">
			<result name="success">/WEB-INF/jsp/channel/ChannelList.jsp</result>
		</action>
		<action name="channelListDelete" class="com.iidooo.cms.action.channel.ChannelListAction" method="delete">
			<result name="success" type="redirect">channelList.action?channel.channelID=${channel.parentID}</result>
			<result name="input">/WEB-INF/jsp/channel/ChannelList.jsp</result>
		</action>

		<action name="channelDetail" class="com.iidooo.cms.action.channel.ChannelDetailAction" method="init">
			<result name="success">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
		</action>
		<action name="channelCreate" class="com.iidooo.cms.action.channel.ChannelDetailAction" method="create">
			<result name="success">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
		</action>
		<action name="channelUpdate" class="com.iidooo.cms.action.channel.ChannelDetailAction" method="update">
			<result name="success">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
		</action>

		<action name="contentList" class="com.iidooo.cms.action.content.ContentListAction" method="init">
			<result name="success">/WEB-INF/jsp/content/ContentList.jsp</result>
		</action>
		<action name="contentListDelete" class="com.iidooo.cms.action.content.ContentListAction" method="delete">
			<result name="success">/WEB-INF/jsp/content/ContentList.jsp</result>
			<result name="input">/WEB-INF/jsp/content/ContentList.jsp</result>
		</action>

		<action name="contentDetail" class="com.iidooo.cms.action.content.ContentDetailAction" method="init">
			<result name="success">/WEB-INF/jsp/content/ContentDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/content/ContentDetail.jsp</result>
		</action>
		<action name="contentCreate" class="com.iidooo.cms.action.content.ContentDetailAction" method="create">
			<result name="success" type="redirect">contentList.action?content.channelID=${content.channelID}</result>
			<result name="input">/WEB-INF/jsp/content/ContentDetail.jsp</result>
		</action>
		<action name="contentUpdate" class="com.iidooo.cms.action.content.ContentDetailAction" method="update">
			<result name="success">/WEB-INF/jsp/content/ContentDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/content/ContentDetail.jsp</result>
		</action>

		<!-- The ajax action did not need the result, the result will output as json -->
		<action name="fileUpload" class="com.iidooo.core.action.FileUploadAction" method="upload">
		</action>
		<action name="kindEditorFileManager" class="com.iidooo.core.action.KindEditorFileManagerAction" method="manage">
			
		</action>
	</package>
</struts>