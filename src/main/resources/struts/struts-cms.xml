<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="cms" extends="iidooo-default">
		<action name="index" class="com.iidooo.cms.action.index.IndexAction">
			<result name="success" type="redirectAction">welcome.action</result>
		</action>
		<action name="updateDefaultSite" class="com.iidooo.cms.action.index.IndexAction" method="updateDefaultSite"></action>
		<action name="welcome" class="com.iidooo.cms.action.index.IndexAction" method="init">
			<result name="success">/WEB-INF/jsp/index/Index.jsp</result>
		</action>
		<action name="siteList" class="com.iidooo.cms.action.index.SiteListAction" method="init">
			<result name="success">/WEB-INF/jsp/index/SiteList.jsp</result>
		</action>
		<action name="siteDetail" class="com.iidooo.cms.action.index.SiteDetailAction" method="init">
			<result name="success">/WEB-INF/jsp/index/SiteDetail.jsp</result>
		</action>

		<action name="channelManage" class="com.iidooo.cms.action.channel.ChannelListAction">
			<result name="success" type="redirectAction">channelList.action</result>
		</action>
		<action name="channelList" class="com.iidooo.cms.action.channel.ChannelListAction" method="init">
			<result name="success">/WEB-INF/jsp/channel/ChannelList.jsp</result>
		</action>
		<action name="channelListDelete" class="com.iidooo.cms.action.channel.ChannelListAction" method="delete">
			<result name="success" type="redirectAction">channelList.action?channel.siteID=${channel.siteID}&amp;channel.channelID=${channel.parentID}</result>
			<result name="input">/WEB-INF/jsp/channel/ChannelList.jsp</result>
		</action>

		<action name="channelDetail" class="com.iidooo.cms.action.channel.ChannelDetailAction" method="init">
			<result name="success">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
		</action>
		<action name="channelCreate" class="com.iidooo.cms.action.channel.ChannelDetailAction" method="create">
			<result name="success">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
		</action>
		<action name="channelUpdate" class="com.iidooo.cms.action.channel.ChannelDetailAction" method="update">
			<result name="success">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/channel/ChannelDetail.jsp</result>
		</action>

		<action name="contentManage" class="com.iidooo.cms.action.content.ContentListAction">
			<result name="success" type="redirectAction">contentList.action</result>
		</action>
		<action name="contentList" class="com.iidooo.cms.action.content.ContentListAction" method="init">
			<result name="success">/WEB-INF/jsp/content/ContentList.jsp</result>
		</action>
		<action name="contentListDelete" class="com.iidooo.cms.action.content.ContentListAction" method="delete">
			<result name="success" type="redirectAction">contentList.action?content.siteID=${content.siteID}&amp;content.channelID=${content.channelID}</result>
			<result name="input">/WEB-INF/jsp/content/ContentList.jsp</result>
		</action>

		<action name="contentDetail" class="com.iidooo.cms.action.content.ContentDetailAction" method="init">
			<result name="success">/WEB-INF/jsp/content/ContentDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/content/ContentDetail.jsp</result>
		</action>
		<action name="contentCreate" class="com.iidooo.cms.action.content.ContentDetailAction" method="create">
			<result name="success">/WEB-INF/jsp/content/ContentDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/content/ContentDetail.jsp</result>
		</action>
		<action name="contentUpdate" class="com.iidooo.cms.action.content.ContentDetailAction" method="update">
			<result name="success">/WEB-INF/jsp/content/ContentDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/content/ContentDetail.jsp</result>
		</action>
	</package>
</struts>