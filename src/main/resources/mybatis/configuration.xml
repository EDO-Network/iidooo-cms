<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- 引用db.properties配置文件 -->
	<properties resource="mybatis/jdbc-localhost.properties" />

	<typeAliases>
		<typeAlias alias="SecurityUserDto" type="com.iidooo.core.dto.extend.SecurityUserDto" />
		<typeAlias alias="SecurityRoleDto" type="com.iidooo.core.dto.extend.SecurityRoleDto" />
		<typeAlias alias="SecurityResDto" type="com.iidooo.core.dto.extend.SecurityResDto" />
		<typeAlias alias="DictItemDto" type="com.iidooo.core.dto.extend.DictItemDto" />

		<typeAlias alias="ChannelDto" type="com.iidooo.cms.dto.extend.ChannelDto" />
		<typeAlias alias="ContentDto" type="com.iidooo.cms.dto.extend.ContentDto" />
		<typeAlias alias="CommentDto" type="com.iidooo.cms.dto.extend.CommentDto" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<!-- 事务管理 -->
			<transactionManager type="JDBC" />
			<!-- 数据库连接池和连接信息 -->
			<dataSource type="POOLED">
				<property name="driver" value="${mysql.driverClassName}" />
				<property name="url" value="${mysql.url}" />
				<property name="username" value="${mysql.username}" />
				<property name="password" value="${mysql.password}" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="com/iidooo/core/dao/extend/SecurityUserDao.xml" />
		<mapper resource="com/iidooo/core/dao/extend/SecurityRoleDao.xml" />
		<mapper resource="com/iidooo/core/dao/extend/SecurityResDao.xml" />
		<mapper resource="com/iidooo/core/dao/extend/DictItemDao.xml" />

		<mapper resource="com/iidooo/cms/dao/extend/ChannelDao.xml" />
		<mapper resource="com/iidooo/cms/dao/extend/ContentDao.xml" />
	</mappers>
</configuration>